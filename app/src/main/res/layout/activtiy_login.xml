<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg_color">

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="登录"
        android:textSize="22sp"
        android:textColor="#f00"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_redLine"
        android:layout_width="54dp"
        android:layout_height="3dp"
        android:background="#f00"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="42dp"/>

    <TextView
        android:id="@+id/text_topLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#338e8e8e"
        android:layout_marginTop="45dp"/>

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:textColor="#000"
        android:textSize="23sp"
        android:layout_below="@+id/text_topLine"
        android:layout_alignLeft="@+id/text_login"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_phone"
        android:layout_alignBottom="@+id/text_phone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:textColor="#8e8e8e"
        android:hint="请输入手机号"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:background="@null"/>

    <TextView
        android:id="@+id/text_yanzheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码"
        android:textColor="#000"
        android:textSize="23sp"
        android:layout_below="@id/text_phone"
        android:layout_alignLeft="@+id/text_phone"
        android:layout_marginTop="35dp"/>

    <EditText
        android:id="@+id/edit_yanzheng"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_yanzheng"
        android:layout_alignBottom="@+id/text_yanzheng"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:hint="请输入验证码"
        android:textColor="#8e8e8e"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:background="@null"/>

    <TextView
        android:id="@+id/text_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/edit_yanzheng"
        android:layout_alignBottom="@+id/text_yanzheng"
        android:layout_marginRight="10dp"
        android:text="发送验证码"
        android:textSize="15sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/text_login_atOnce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即登录"
        android:textSize="22sp"
        android:textColor="#f00"
        android:layout_below="@+id/text_yanzheng"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text_line"
        android:layout_width="match_parent"
        android:layout_height="0.001dp"
        android:background="#339e9e9e"
        android:layout_below="@+id/text_login_atOnce"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/text_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还可以用以下方式登录"
        android:layout_below="@+id/text_line"
        android:layout_alignLeft="@+id/text_line"
        android:layout_marginTop="15dp"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_other"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_weixin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/icoland_weixin_v5" />
        <TextView
            android:id="@+id/text_weibo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/icoland_sina_v5"/>
        <TextView
            android:id="@+id/text_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/icoland_qq_v5"/>
        <TextView
            android:id="@+id/text_so"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icoland_sohu_v5"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/bg_color"/>

    <TextView
        android:id="@+id/text_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/back_bar"/>
</RelativeLayout>