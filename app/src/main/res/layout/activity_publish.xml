<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg_color">

    <RelativeLayout
        android:id="@+id/publish"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/publish_back"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/searchbackbtn"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本信息"
            android:textSize="24sp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/publish_home"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/icotab_newspress_v5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/publish_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/publish"
        android:background="?attr/bg_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/publish_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/publish_logo"
        android:text="新闻汇 天下汇"
        android:textColor="#000"
        android:textSize="24sp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/text_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:layout_below="@+id/text_name"
        android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="CopyRight@2015-2016 NewsHui.com"
        android:textColor="#000"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="卓越汇闻 版权所有"
        android:textColor="#000"
        android:gravity="center_horizontal"/>
</RelativeLayout>