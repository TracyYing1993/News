<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/bg_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/searchbackbtn"
            android:onClick="clickButton" />

        <TextView
            android:id="@+id/table_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="?attr/text_color"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_rightHome"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icotab_newspress_v5"
            android:layout_marginRight="10dp"
            android:onClick="clickButton" />

    </RelativeLayout>
    <TextView
        android:id="@+id/text_record_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="共有0条记录"
        android:textColor="?attr/text_color"
        android:layout_marginTop="20dp"
        android:textSize="19sp" />
    <ListView
        android:id="@+id/listView_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dip"
        android:background="?attr/bg_color"/>

    <TextView
        android:id="@+id/text_empty_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="?attr/text_color"
        android:text="没有找到任何数据" />

</LinearLayout>